<resources>
    <!-- Base application theme. -->
    <style name="Tema_Oscuro" parent="Theme.Material3.Dark">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/oscuro1</item>
        <item name="colorPrimaryDark">@color/oscuro2</item>
        <item name="colorAccent">@color/oscuro3</item>
        <item name="backgroundColor">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:popupMenuStyle">@style/MyPopupMenuStyle</item>
    </style>
    <style name="MyPopupMenuStyle" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/popup_menu_background</item>
    </style>
    <style name="fondo_carrito">
        <item name="android:background">@color/oscuro2</item>
    </style>
    <style name="botones" parent="TextAppearance.AppCompat.Button">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="texto1" parent="TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">sans-serif-condensed-medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">40sp</item>
    </style>
    <style name="texto1b" parent="TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">sans-serif-condensed-medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="texto2" parent="TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">sans-serif-condensed-medium</item>
        <item name="android:textSize">40sp</item>
    </style>
    <style name="texto3" parent="TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">sans-serif-condensed-medium</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="texto4" parent="TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">sans-serif-condensed-medium</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="texto4b" parent="TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">sans-serif-condensed-medium</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="backImage">
        <item name="srcCompat">@drawable/volver</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="Theme.Contador" parent="Tema_Oscuro" />
</resources>